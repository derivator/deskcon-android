<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="5dip"   
    android:orientation="vertical" >

    <TextView
        android:id="@+id/widgethosttextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP" />

    <EditText
        android:id="@+id/newipeditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/widgetplayertextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Port" />

    <EditText
        android:id="@+id/newporteditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="8082"
        android:ems="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/wifilockcheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Only on Wifi" />

    </LinearLayout>

</LinearLayout>
